    <!-- partial del header-->
    <%- include("./partials/header-total") %>

    <main>
      <!-- El main arranca con un nav, donde van todos los perifericos . -->

      <img class="Banner" src="/img/productos/Banner.jpg" />

      <p class="titulo-categoria">Auriculares</p>
      <div class="contenedor-principal">
        <button role="button" id="flecha-izquierda" class="flecha-izquierda"><i class="fas fa-angle-left"></i></button>

        <div class="contenedor-carousel">
            <div class="carousel">             
                <% productos.forEach(producto => { if (producto.categoria_id == 1) { %>
                    <article class="articulo">
                        <a class="contenedor-img" href="/product/detalle-producto/<%= producto.id %>">
                            <div class="object-cover"><img class="producto-imagen" src="/img/productos/<%= producto.imagen1 %>"></div>
                        </a>
                        <div>
                            <p class="nombre-producto"><%= producto.titulo %></p>
                            <p class="precio">$<%= producto.precio %></p>
                        </div>
                    </article>
                <% }}) %>
            </div>
        </div>

        <button role="button" id="flecha-derecha" class="flecha-derecha"><i class="fas fa-angle-right"></i></button>
    </div>

