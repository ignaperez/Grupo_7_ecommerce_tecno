<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/registro.css">




    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <title>PhericsOne</title>
</head>

<body>
    <!-- partial del header-->
    <%- include("./partials/header-superior")  %> 


    <main>



        <div class="div-formulario">

            <form class="formulario" action="/users/registro" method="POST" enctype="multipart/form-data">

                <input class="input-registro <%= locals.errors && errors.firstname ? 'is-invalid' : null %>" 
                type="text" name="firstname" placeholder="Nombre"
                value="<%= locals.oldData ? oldData.firstname : null %>">
                <% if (locals.errors && errors.firstname) { %>
                    <div class="error-text">
                        <%= errors.firstname.msg %> 
                    </div>
                <% } %>
                <input class="input-registro <%= locals.errors && errors.lastname ? 'is-invalid' : null %>" 
                type="text" name="lastname" placeholder="Apellido"
                value="<%= locals.oldData ? oldData.lastname : null %>">
                <% if (locals.errors && errors.lastname) { %>
                    <div class="error-text">
                        <%= errors.lastname.msg %> 
                    </div>
                <% } %>
                <input class="input-registro <%= locals.errors && errors.email ? 'is-invalid' : null %>" 
                type="text" name="email" placeholder="Email@servidor.com"
                value="<%= locals.oldData ? oldData.email : null %>">
                <% if (locals.errors && errors.email) { %>
                    <div class="error-text">
                        <%= errors.email.msg %> 
                    </div>
                <% } %>
                <input class="input-registro <%= locals.errors && errors.telefono ? 'is-invalid' : null %>" 
                type="text" name="telefono" placeholder="Teléfono"
                value="<%= locals.oldData ? oldData.telefono : null %>">
                <% if (locals.errors && errors.telefono) { %>
                    <div class="error-text">
                        <%= errors.telefono.msg %> 
                    </div>
                <% } %>
                <input class="input-registro <%= locals.errors && errors.username ? 'is-invalid' : null %>" 
                type="text" name="username" placeholder="Nombre de usuario"
                value="<%= locals.oldData ? oldData.username : null %>">
                <% if (locals.errors && errors.username) { %>
                    <div class="error-text">
                        <%= errors.username.msg %> 
                    </div>
                <% } %>
                <input class="input-registro <%= locals.errors && errors.password ? 'is-invalid' : null %>" 
                type="password" name="password" placeholder="Contraseña">
                <% if (locals.errors && errors.password) { %>
                    <div class="error-text">
                        <%= errors.password.msg %> 
                    </div>
                <% } %>

                <div class="foto-perfil"><label for="imagenPerfil">Seleccione su foto de perfil: </label>
                    <input class="boton-imagen <%= locals.errors && errors.imagenPerfil ? 'is-invalid' : null %>" 
                    type="file" name = "imagenPerfil"> </div>
                <% if (locals.errors && errors.imagenPerfil) { %>
                    <div class="error-text">
                        <%= errors.imagenPerfil.msg %> 
                    </div>
                <% } %>
                
                <button class="boton" type="submit">Registrar</button>

            </form>
        </div>
    </main>
    <!-- partials del footer-->
    <%- include("./partials/footer")  %> 
</body>

</html>