<body>
    <!-- partial del header-->
    <%- include("./partials/header-superior") %>

        <main>
            

            <div class="div-titulo"><h1 class="titulo">PhericsOne</h1></div>
        <div class="contenedor-formulario">
            <form class="formulario" action="/users/login" method="post">
                <% if (locals.error) { %>
                    <div class="error-text">
                        <%= error %> 
                    </div>
                <% } %>
                <div class="contenedor-input"><input class="input" type="text" name="email"  required>
                <label>Email</label></div>
                <div class="contenedor-input"><input class="input" type="password" name="password"  required>
                <label>Contrase√±a</label></div>
                 <div class="contenedor-recordar">  
                        <input class="checkbox" type="checkbox" name="recordar_usuario">Recordar este usuario
                    </div class="contenedor-boton"> 
                        <button class="boton" type="submit">Ingresar</button>
            </form>
        </div>
        </main>
        <!-- partials del footer-->
        <%- include("./partials/footer") %>
        
</body>

</html>